    </head>
    
    <div class="row">
                <div class="col left-container"></div>
                <div class="col rigth-container"></div>
    </div>
    <div id = "wrapper">
        </div id = "c1">
            <?php 
              generate_convo_elements($messages);
            ?>
        <div  class = right>
            <table class='conversation' >

            <tbody style = image-item>
                <?php
            
                ?>
